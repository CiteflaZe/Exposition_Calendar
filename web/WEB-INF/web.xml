    <servlet>
        <servlet-name>PaymentServlet</servlet-name>
        <servlet-class>com.project.controller.PaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PaymentServlet</servlet-name>
        <url-pattern>/payment</url-pattern>
        <url-pattern>/processPayment</url-pattern>
        <url-pattern>/chooseDate</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.project.controller.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowUsersServlet</servlet-name>
        <servlet-class>com.project.controller.ShowUsersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowUsersServlet</servlet-name>
        <url-pattern>/show</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.project.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>XSSFilter</filter-name>
        <filter-class>com.project.filter.XSSFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>XSSFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <filter>
        <filter-name>AccessRestrictionFilter</filter-name>
        <filter-class>com.project.filter.AccessRestrictionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccessRestrictionFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <error-page>
        <location>/general-error.jsp</location>
    </error-page>
</web-app>