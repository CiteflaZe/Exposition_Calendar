<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <error-page>
        <exception-type>com.project.exception.InvalidLoginException</exception-type>
        <location>/login.jsp</location>
    </error-page>

    <error-page>
        <exception-type>com.project.exception.EmailAlreadyExistException</exception-type>
        <location>/register.jsp</location>
    </error-page>

    <error-page>
        <exception-type>com.project.exception.DataBaseRuntimeException</exception-type>
        <location>/general-error.jsp</location>
    </error-page>

    <error-page>
        <exception-type>com.project.exception.DownloadTicketsException</exception-type>
        <location>/general-error.jsp</location>
    </error-page>

    <error-page>
        <exception-type>com.project.exception.EntityNotFoundException</exception-type>
        <location>/general-error.jsp</location>
    </error-page>

    <error-page>
        <exception-type>com.project.exception.ExpositionAlreadyExistException</exception-type>
        <location>/general-error.jsp</location>
    </error-page>

    <error-page>
        <exception-type>com.project.exception.HallAlreadyExistException</exception-type>
        <location>/general-error.jsp</location>
    </error-page>

    <error-page>
        <exception-type>com.project.exception.IllegalPaginationValuesException</exception-type>
        <location>/general-error.jsp</location>
    </error-page>

    <error-page>
        <exception-type>com.project.exception.InvalidRegistrationException</exception-type>
        <location>/general-error.jsp</location>
    </error-page>

    <error-page>
        <exception-type>com.project.exception.PDFCreationException</exception-type>
        <location>/general-error.jsp</location>
    </error-page>

    <error-page>
        <location>/general-error.jsp</location>
    </error-page>
</web-app>